<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="GeeksEmpire" parent="@android:style/Theme.DeviceDefault.Light">
        <item name="android:colorPrimary">@color/default_color</item>
        <item name="android:colorPrimaryDark">@color/default_color_darker</item>
        <item name="android:colorAccent">@color/default_color_light</item>
    </style>

    <style name="GeeksEmpire.AppCompat" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="android:colorPrimary">@color/default_color</item>
        <item name="android:colorPrimaryDark">@color/transparent</item>
        <item name="android:colorAccent">@color/transparent</item>
        <item name="android:colorEdgeEffect">@color/transparent</item>
    </style>

    <style name="GeeksEmpire.AppCompat.Light" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="android:colorPrimary">@color/transparent</item>
        <item name="android:colorPrimaryDark">@color/transparent</item>
        <item name="android:colorAccent">@color/transparent</item>
        <item name="android:colorEdgeEffect">@color/light</item>
    </style>

    <style name="GeeksEmpire.AppCompat.Dark" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="android:colorPrimary">@color/transparent</item>
        <item name="android:colorPrimaryDark">@color/transparent</item>
        <item name="android:colorAccent">@color/transparent</item>
        <item name="android:colorEdgeEffect">@color/dark</item>
    </style>

    <style name="GeeksEmpire.Preference.Light" parent="@style/GeeksEmpire">
        <item name="android:textColorPrimary">@color/darker</item>
        <item name="android:textColorSecondary">@color/trans_black</item>
        <item name="android:alertDialogTheme">@style/GeeksEmpire.Dialogue.Light</item>
        <item name="android:colorAccent">@color/default_color</item>

        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="GeeksEmpire.Preference.Dark" parent="@style/GeeksEmpire">
        <item name="android:textColorPrimary">@color/light</item>
        <item name="android:textColorSecondary">@color/light_trans</item>
        <item name="android:alertDialogTheme">@style/GeeksEmpire.Dialogue.Dark</item>
        <item name="android:colorAccent">@color/default_color</item>

        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="Transparent.Preferences.Light" parent="GeeksEmpire.Preference.Light">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="Transparent.Preferences.Dark" parent="GeeksEmpire.Preference.Dark">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="GeeksEmpire.Dialogue.Light" parent="@android:style/Theme.DeviceDefault.Light.Dialog.Alert" tools:targetApi="22">
        <item name="android:colorPrimary">@color/default_color_darker</item>
        <item name="android:colorAccent">@color/default_color_darker</item>
        <item name="android:textColorPrimary">@color/default_color_darker</item>
        <item name="android:colorPrimaryDark">@color/default_color_darker</item>
        <item name="android:textColorAlertDialogListItem">@color/dark</item>
        <item name="android:background">@color/light</item>
        <item name="android:colorControlActivated">@color/default_color_light</item>

        <item name="android:popupBackground">@color/light</item>
        <item name="android:itemTextAppearance">@style/PopupTextColor.Light</item>
        <item name="android:popupElevation">13dp</item>

        <item name="android:overlapAnchor">true</item>
        <item name="android:dropDownVerticalOffset">0dp</item>
        <item name="android:dropDownHorizontalOffset">107dp</item>
    </style>

    <style name="GeeksEmpire.Dialogue.Dark" parent="@android:style/Theme.DeviceDefault.Light.Dialog.Alert" tools:targetApi="22">
        <item name="android:colorPrimary">@color/default_color</item>
        <item name="android:colorAccent">@color/default_color</item>
        <item name="android:textColorPrimary">@color/default_color</item>
        <item name="android:colorPrimaryDark">@color/default_color_light</item>
        <item name="android:textColorAlertDialogListItem">@color/light</item>
        <item name="android:background">@color/dark</item>
        <item name="android:colorControlActivated">@color/default_color_darker</item>

        <item name="android:popupBackground">@color/dark</item>
        <item name="android:itemTextAppearance">@style/PopupTextColor.Dark</item>
        <item name="android:popupElevation">13dp</item>

        <item name="android:overlapAnchor">true</item>
        <item name="android:dropDownVerticalOffset">0dp</item>
        <item name="android:dropDownHorizontalOffset">107dp</item>
    </style>

    <style name="GeeksEmpire.Dialogue.Category.Light" parent="@android:style/Theme.DeviceDefault.Light.Dialog.Alert" tools:targetApi="22">
        <item name="android:colorPrimary">@color/default_color</item>
        <item name="android:colorAccent">@color/default_color_light</item>
        <item name="android:textColorPrimary">@color/default_color_darker</item>
        <item name="android:colorPrimaryDark">@color/default_color_darker</item>
        <item name="android:textColorAlertDialogListItem">@color/dark</item>
        <item name="android:background">@color/light</item>
        <item name="android:colorControlActivated">@color/default_color_light</item>

        <item name="android:popupBackground">@color/light</item>
        <item name="android:itemTextAppearance">@style/PopupTextColor.Light</item>
        <item name="android:popupElevation">13dp</item>

        <item name="android:overlapAnchor">true</item>
        <item name="android:dropDownVerticalOffset">0dp</item>
        <item name="android:dropDownHorizontalOffset">87dp</item>
    </style>

    <style name="GeeksEmpire.Dialogue.Category.Dark" parent="@android:style/Theme.DeviceDefault.Light.Dialog.Alert" tools:targetApi="22">
        <item name="android:colorPrimary">@color/default_color</item>
        <item name="android:colorAccent">@color/default_color_darker</item>
        <item name="android:textColorPrimary">@color/default_color_light</item>
        <item name="android:colorPrimaryDark">@color/default_color_light</item>
        <item name="android:textColorAlertDialogListItem">@color/light</item>
        <item name="android:background">@color/dark</item>
        <item name="android:colorControlActivated">@color/default_color_darker</item>

        <item name="android:popupBackground">@color/dark</item>
        <item name="android:itemTextAppearance">@style/PopupTextColor.Dark</item>
        <item name="android:popupElevation">13dp</item>

        <item name="android:overlapAnchor">true</item>
        <item name="android:dropDownVerticalOffset">0dp</item>
        <item name="android:dropDownHorizontalOffset">87dp</item>
    </style>

    <style name="Transparent" parent="@android:style/Theme.DeviceDefault.Light.Dialog.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="android:divider">@null</item>
    </style>

    <style name="PopupTextColor.Light" parent="@android:style/TextAppearance.Widget.PopupMenu.Small">
        <item name="android:textColor">@color/dark</item>
    </style>

    <style name="PopupTextColor.Dark" parent="@android:style/TextAppearance.Widget.PopupMenu.Small">
        <item name="android:textColor">@color/light</item>
    </style>

</resources>
